<!DOCTYPE html >
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/1cc22e00f7.js" crossorigin="anonymous"></script> 
    <link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <script src="https://kit.fontawesome.com/1cc22e00f7.js" crossorigin="anonymous"></script>
    
    <title>SportWear</title>
</head>
<body>
    
    <header class="header">
        
        <section class="mainContainer">
            
            <div class="logo">               
                <a href="/" ><i class="fab fa-stripe-s"></i></a>
                <a href="/" class="tituloHead">SportWear<a>                          
                </div>
                
                <div class="buscador">
                    <div class="buscadorChico">
                        <form action="/product" method="GET" class="forms">
                            <div class="input-group">  
                                <input type="text" class="form-control" placeholder="Buscar" name="busqueda">
                                <button type="submit" class="fas fa-search" ></button>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            
            
            <div class="loginReg">
                
                <% if (locals.logeado) {%>
                    <div class="botonLogReg">
                        <button class="botonLogRed btn btn-secondary" ><a class="btnColor"  href="/auth/profile">Perfil</a></button>
                    </div>
                    
                    <div class="botonLogReg">
                        <form class="formulario" action="/auth/LogOut" method="POST">
                            <button type="submit" class=" botonLogRed btn btn-secondary">LogOut</button>
                        </form>                        
                    </div>
                    <div class="botonLogReg">
                        <button class="botonLogRed btn btn-secondary"><a a class="btnColor" href="/cart/index"><i class="fas fa-shopping-cart"></i></a></button>
                    </div>
                    
                    <% } else { %>
                        <div class="botonesLogReg">
                            <button class="botonLogRed btn btn-secondary"><a a class="btnColor" href="/auth/login">LogIn</a></button>
                        </div>
                        <div class="botonesLogReg">
                            <button class=" botonLogRed btn btn-secondary" ><a a class="btnColor" href="/auth/register">Registro</a></button>
                        </div>
                        <% } %>
                        
                    </div>
                    
                    <section class="barraInferior">
                        
                        <nav class="barraSecundaria">
                            <div class="btn-group btn-group-justified">

                                <a class="btn btn-dark" id="boton" href="/">Inicio</a>
                           
                                <a class="btn btn-dark" id="boton" href="#">Categorias</a>
                                
                                <a class="btn btn-dark" id="boton" href="/product">Productos</a>
                               
                                <a class="btn btn-dark" id="boton" href="/product/create">Publicar</a>
                           
                                <a class="btn btn-dark" id="boton" href="#">Ofertas</a>
                          
                                <a class="btn btn-dark" id="boton" href="#">Ayuda</a>
                            </div>
                        </nav>                    
                        
                        
                        <div class="dropdown">
                            
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-bars"></i>
                            </button>
                            
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/">Inicio</a>
                                <a class="dropdown-item" href="#">Categorias</a>
                                <a class="dropdown-item" href="/product/create">Publicar</a>
                                <a class="dropdown-item" href="/product">Productos</a>
                                <a class="dropdown-item" href="#">Ayuda</a>
                                <div class="dropdown-divider"></div>
                                
                                <% if (locals.logeado) {%>
                                    
                                    <a class="dropdown-item" href="/auth/profile">Perfil</a>
                                    <a class="dropdown-item" href="/cart/index">Carrito</a>
                                    <form class="formulario" action="/auth/LogOut" method="POST">
                                        <button class="dropdown-item" type="submit" class="ConfLogIn">LogOut</button>
                                    </form>
                                    
                                    
                                    <% } else { %>
                                        
                                        <a class="dropdown-item" href="/auth/login">Login</a>
                                        <a class="dropdown-item" href="/auth/register">Register</a>  
                                        
                                        
                                        <% } %>
                                    </div>
                                    
                                </div>
                                
                            </section>
                            
                        </section>
                        
                    </header>