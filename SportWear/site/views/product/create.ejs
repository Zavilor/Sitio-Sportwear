<%- include('../partials/header'); %> 
<link rel="stylesheet" href='/stylesheets/productAdd.css'>
<section class="todoCreate">
   
   
    <div class="create">
        <div>
            <% if (typeof errors != 'undefined') { %>
                <ul>
                <% for (let i = 0; i < errors.length; i++) { %>
                    <li>
                        <%= errors[i].msg %>
                    </li>
                    <% } %>
                </ul>
            <% } %>
        </div> 
    <form method="POST" action="/product/create" enctype="multipart/form-data">
       
        <div class="form-group ">
            <label class="" for="title">Nombre del producto</label>
            <input type="text" class="form-control" id="title" placeholder="Title" name="name">
        </div>

        <div class="form-group ">
            <label class="" for="title">Descripcion de producto</label>            
            <textarea name="description" id="description" class="form-control" rows="5" cols="10" placeholder= "Describa en breves palabras a su producto"></textarea>
        </div>

       
        <div class="form-group ">
            <label class="" for="title">Imagen</label>
            <input type="file" class="form-control" id="image" placeholder="Image" name="image">
        </div>


        <div class="form-group ">
            <label class="" for="title">Categoria</label>
            <select name="category" id="category" class="form-control" >
                <option value="">--Seleccione una categoría--</option>
                <option value="Football">Futbol</option>
                <option value="Hocky">Hockey</option>
                <option value="Golf">Golf</option>
                <option value="Tennis">Tenis</option>
            </select>
        </div>


        <div class="form-group ">
            <label class="" for="title">Cantidad</label>
            <input type="number" class="form-control" id="title" placeholder="Indica la cantidad disponible" name="quantity">
            
        </div>


        <div class="form-group ">
            <label class="" for="title">Precio</label>
            <input type="number" class="form-control" id="title" placeholder="Establece un precio acorde" name="price">
        </div>


        <div class="botones-product-add">
                
            <button type="submit" class="btn btn-success">Enviar Publicación</button>
                
            <button type="reset" class="btn btn-danger">Borrar todo</button>
        </div>
    
    </form>

</div>
</section>
    <%- include('../partials/footer'); %>