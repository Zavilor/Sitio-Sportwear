<%- include('../partials/header'); %>
<link rel="stylesheet" href="/stylesheets/login.css">

<script src="/js/login.js"></script>
<section class="todoLogIn">
   
    <div class="cajaLogIn">
        <div class="tituloFormulario">
            <h1>Log In</h1>
        </div>

        <div>
            <% if (typeof errors != 'undefined') { %>
                <ul>
                <% for (let i = 0; i < errors.length; i++) { %>
                    <li>
                        <%= errors[i].msg %>
                    </li>
                    <% } %>
                </ul>
            <% } %>
        </div>
    

        <form class="formulario formularioLogin" action="login" method="POST">
         <div class="logueo">

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text nombreLogIn" id="inputGroup-sizing-default">Email</span>
                </div>
                <input type="text" class="form-control inputCompletar email" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"  type="email" id="email" name="email">
                
            </div>
            
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text nombreLogIn" id="inputGroup-sizing-default">Contrase√±a</i></span>
                </div>
                <input type="password" class="form-control inputCompletar password verPassword" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" name="password" id="password" >
            </div>
           
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="inputGroup-sizing-default" class="nombreLogIn">Recordarme</span>
                </div>
                <input type="checkbox" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" class="inputCompletar" type="rememberMe" name="rememberMe" id="rememberMe" class="rememberMe">
           
        </div >
            
            <div class="div-boton-reg" class="boton-login" >
                <button class="btn btn-info" type="submit" class="ConfLogIn">Confirmar</button>
            </div>
        
        
        </form>
    </div>
</section>

<%- include('../partials/footer'); %>

</div>