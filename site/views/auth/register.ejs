<%- include('../partials/header'); %>

<section>
    <h1>Registrate</h1>

    <form class="formulario" action="registro" method="POST">
        <div>
            <div class="formRegistro">
               <label>Nombre</label>
            </div>
            <input type="text" class="nombreUsuario" id="nombre" name="name" required>
        </div>
        <div>
            <div class="formRegistro">
               <label>Apellido</label>
            </div>
           <input type="text" class="apellido" id="apellido" name="apelido">
        </div>
        <div>
            <div class="formRegistro">
               <label>Correo electronico</label>
            </div>
            <input type="email" class="email" id="email" name="email">
        </div>
        <div>
            <div class="formRegistro">
               <label>Contraseña</label>
            </div>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <div>
            <div class="formRegistro">
               <label>Confir Contraseña</label>
            </div>
            <input type="password" class="form-control" id="password" name="confirmarPAssword">     
        </div> 
        <div class="botonRegistro">
            <button type="submit" class="botonRegistro">Crear Cuenta</button>
        </div>
        <div>
            <button type="submit" class="regFacebook">Registrar con Facebook</button>
        </div>
        <div>
            <button type="submit" class="regGoogle">Registrar con Google</button>
        </div>
    </form>
</section>
</div>

<%- include('../partials/footer'); %>
